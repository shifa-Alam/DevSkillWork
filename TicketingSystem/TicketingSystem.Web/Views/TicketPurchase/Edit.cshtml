@model PuchaseTicketEditModel
@{
    ViewData["Title"] = "Edit Purchase Ticket";
    ViewData["PageNav"] = "Edit Purchase";
}

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Edit Purchase Ticket Form</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" asp-controller="TicketPurchase" asp-action="Edit" method="post" asp-antiforgery="true">
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="OnboardingTime">Date and time:</label>
                            <div class="input-group date" id="reservationdatetime" data-target-input="nearest">
                                <input asp-for="OnboardingTime" type="text" class="form-control datetimepicker-input" data-target="#reservationdatetime">
                                <div class="input-group-append" data-target="#reservationdatetime" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                                <span asp-validation-for="OnboardingTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="BusNumber">Bus No</label>
                            <input type="text" class="form-control" asp-for="BusNumber" id="title">
                            <span asp-validation-for="BusNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SeatNumber">Seat No</label>
                            <input type="text" class="form-control" asp-for="SeatNumber" id="title">
                            <span asp-validation-for="SeatNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TicketPrice">Price</label>
                            <input type="number" class="form-control" asp-for="TicketPrice" id="title">
                            <span asp-validation-for="TicketPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CustomerName">Customer Name</label>
                            <input type="text" class="form-control" asp-for="CustomerName" id="title">
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CustomerAddress">Address</label>
                            <input type="text" class="form-control" asp-for="CustomerAddress" id="fees">
                            <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <a asp-action="Index" asp-controller="TicketPurchase"  class="btn btn-default">Cancel</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->
@section Scripts
{
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


}